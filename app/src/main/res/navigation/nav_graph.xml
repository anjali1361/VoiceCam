<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.example.cameraapp.fragment.PermissionsFragment"
        android:label="PermissionsFragment" >

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.example.cameraapp.fragment.CameraFragment"
        android:label="CameraFragment" >

        <action
            android:id="@+id/action_camera_to_gallery"
            app:destination="@id/gallery_fragment" />
        <action
            android:id="@+id/action_camera_to_photo"
            app:destination="@id/photo_fragment" />
        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/gallery_fragment"
        android:name="com.example.cameraapp.fragment.GalleryFragment"
        android:label="GalleryFragment" >
        <action
            android:id="@+id/action_gallery_to_photo"
            app:destination="@id/photo_fragment" />
        <argument
            android:name="root_directory"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/photo_fragment"
        android:name="com.example.cameraapp.fragment.PhotoFragment"
        android:label="PhotoFragment" >

        <action
            android:id="@+id/action_photo_to_camera"
            app:destination="@id/camera_fragment" />

<!--        <argument-->
<!--            android:name="root_directory"-->
<!--            app:argType="string" />-->

        <argument
            android:name="row"
            app:argType="com.example.cameraapp.model.row" />

    </fragment>

</navigation>